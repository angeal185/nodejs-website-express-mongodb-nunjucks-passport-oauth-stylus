{% extends '../layout.njk' %}

{% block content %}
<!-- TODO: Fix unsupported jade extends -->
<div class="page-header">
  <h2><i class="fa fa-upload"></i>File Upload</h2>
</div>
<div class="btn-group btn-group-justified"><a href="https://github.com/expressjs/multer" target="_blank" class="btn btn-success"><i class="fa fa-book"></i>Multer Documentation</a>
  <a href="{{'http://codepen.io/search/pens?q=custom}}{{file}}{{upload&limit=all&type=type-pens'}}" target="_blank" class="btn btn-success"><i class="fa fa-laptop"></i>Customize File Upload</a>
</div>
<h3>File Upload Form</h3>
<div class="row">
  <div class="col-sm-6">
    <p>All files will be uploaded to "/uploads" directory.</p>
    <form role="form" enctype="multipart/form-data" method="POST">
      <div class="form-group"><label class="control-label">File Input</label><input type="file" name="myFile"></div><button type="submit" class="btn btn-primary">Submit</button></form>
  </div>
</div>
{% endblock %}